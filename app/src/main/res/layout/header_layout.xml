<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <com.otaku.fairyland.widget.AutoScrollViewPage
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/_picker_select_item"
        android:padding="1dip">

        <TextView
            style="@style/textsize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:textColor="@color/white" />

        <com.otaku.fairyland.widget.CirclePageIndicator xmlns:CirclePageIndicator="http://schemas.android.com/apk/res-auto"
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dip"
            android:layout_marginRight="10dip"
            android:padding="1dip"
            CirclePageIndicator:fillColor="@color/white"
            CirclePageIndicator:pageColor="@color/gray"
            CirclePageIndicator:strokeWidth="0dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginEnd="5dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        android:src="@drawable/pic_free" />

</RelativeLayout>
